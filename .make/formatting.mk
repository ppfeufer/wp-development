# Text formatting
FONT_BOLD := $(shell echo -e "\033[1m")
FONT_BOLD_END := $(shell echo -e "\033[22m")
FONT_ITALIC := $(shell echo -e "\033[3m")
FONT_ITALIC_END := $(shell echo -e "\033[23m")
FONT_UNDERLINE := $(shell echo -e "\033[4m")
FONT_UNDERLINE_END := $(shell echo -e "\033[24m")

FONT_COLOR_GREEN := $(shell echo -e "\033[0;32m")
FONT_COLOR_GREEN_END := $(shell echo -e "\033[0;39m")
FONT_COLOR_RED := $(shell echo -e "\033[0;31m")
FONT_COLOR_RED_END := $(shell echo -e "\033[0;39m")
FONT_COLOR_BLUE := $(shell echo -e "\033[0;34m")
FONT_COLOR_BLUE_END := $(shell echo -e "\033[0;39m")
FONT_COLOR_YELLOW := $(shell echo -e "\033[0;33m")
FONT_COLOR_YELLOW_END := $(shell echo -e "\033[0;39m")
FONT_COLOR_PURPLE := $(shell echo -e "\033[0;35m")
FONT_COLOR_PURPLE_END := $(shell echo -e "\033[0;39m")
FONT_COLOR_CYAN := $(shell echo -e "\033[0;36m")
FONT_COLOR_CYAN_END := $(shell echo -e "\033[0;39m")
FONT_COLOR_GREY := $(shell echo -e "\033[0;37m")
FONT_COLOR_GREY_END := $(shell echo -e "\033[0;39m")

FONT_RESET := $(shell echo -e "\033[0m")
