{
    "name": "ppfeufer/ppfeufer",
    "description": "Theme for my homepage",
    "authors": [
        {
            "name": "Peter Pfeufer",
            "email": "info@ppfeufer.de"
        }
    ],
    "require": {
        "yahnis-elsts/plugin-update-checker": "^5.5"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "wp-cli/wp-cli-bundle": "^2.11",
        "squizlabs/php_codesniffer": "^3.11",
        "brianhenryie/strauss": "^0.20.0"
    },
    "extra": {
        "strauss": {
            "target_directory": "Sources/Libs",
            "namespace_prefix": "WordPress\\Ppfeufer\\Theme\\Ppfeufer\\Libs\\",
            "include_modified_date": false,
            "include_author": false
        }
    },
    "scripts": {
        "strauss": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/strauss",
            "composer dump-autoload"
        ],
        "post-install-cmd": [
            "@strauss"
        ],
        "post-update-cmd": [
            "@strauss"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "classmap-authoritative": true,
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "WordPress\\Ppfeufer\\Theme\\Ppfeufer\\": "Sources"
        },
        "classmap": [
            "vendor"
        ]
    }
}
